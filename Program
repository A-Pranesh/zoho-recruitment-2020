#include <stdio.h>

int main() {
    int n,i,j,a=0,b=1,k,c=0;
    scanf("%d",&n);
    for(i=0;i<=n;i++,a=i,c=0){
        for(j=n-1;j>=i;j--){
            printf("  ");
        }
        for(k=0;k<b;k++){
            if(k<b/2){
                printf("%d ",a--);
            } else {
                printf("%d ",c++);
            }
        }
        b+=2;
        printf("\n");
    }
}
  
